<%- include('partials/admin/header.ejs') %> 
<div>
    <div class="container">
        <form action="/layers/add" method="POST">
        <div class="form-group">
            <label for="layer-type">Tipo de Camada</label>
            <div class="form-check" id="layer-type">
                <input class="form-check-input" type="radio" name="type" id="basemap" value="1">
                <label class="form-check-label" for="basemap">
                    Camada Base
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="type" id="overlay" value="2" checked>
                <label class="form-check-label" for="overlay">
                    Camada de Sobreposição
                </label>
            </div>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="layerName" name="layerName" placeholder="Nome de Exibição da Camada">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="group" name="group" placeholder="Grupo da Camada">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="host" name="host" placeholder="Host">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="layer" name="layer" placeholder="workspace:camada">
        </div>
        <div class="form-group">
            <label for="layer-type">Camada Padrão?</label>
            <div class="form-check" id="default-layer">
                <input class="form-check-input" type="radio" name="defaultBaseLayer" id="true" value="true">
                <label class="form-check-label" for="true">
                    Sim
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="defaultBaseLayer" id="false" value="false" checked>
                <label class="form-check-label" for="false">
                    Não
                </label>
            </div>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="restrictedFields" name="restrictedFields" placeholder="restrictedFields">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="queryFields" name="queryFields" placeholder="queryFields">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="fieldAlias" name="fieldAlias" placeholder="fieldAlias">
        </div>
        <button type="submit" class="btn btn-dark">Salvar</button>
        </form>
    </div>   
</div>
<%- include('partials/admin/footer.ejs') %> 